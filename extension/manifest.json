{
  "manifest_version": 3,
  "name": "TrueSight Verifier",
  "version": "1.0",
  "description": "Verify text, images, and URLs for misinformation using TrueSight-AI.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon128.png"
  }
}
